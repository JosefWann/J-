/* pages/essay/essay.wxss */
.headerImg{
  width:100%;
  height: 400rpx;
}
.authorInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.authorAvatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 10rpx 30rpx;
}
.authorName{
  color: gray;
}
.authorSign{
  color: lightgray;
  font-size: 28rpx;
}
.essayTitle{
  font-size: 35rpx;
  margin: 30rpx;
  color: #424242;
}
.essayContent{
  font-size: 30rpx;
  margin: 20rpx;
}
.essayFooter{
  position: fixed;
  top: 94%;
  background: white;
  width: 100%;
  height: 6%;
  border-top: lightgray solid 1rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.essayFooter>view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 250rpx;
  color: #afafaf;
  font-size: 30rpx;
  align-items: center;
}
.essayDate{
  text-align: right;
  font-size: 30rpx;
  padding: 0 50rpx;
  color: gray;
}
.footerBtn>image{
  height:40rpx;
  width:40rpx;
}
.selected{
  color: #0000ff;
}